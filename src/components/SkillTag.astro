---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

<div class="skill-tag">
    {name}
</div>

<style>
    .skill-tag {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border: 1px solid var(--glass-border);
        border-radius: 4px;
        font-family: monospace;
        color: var(--accent-color);
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .skill-tag:hover {
        background: var(--tech-pill-bg);
        border-color: var(--accent-color);
    }
</style>
