<button class="theme-toggle" aria-label="Toggle theme">
    <span class="sr-only"></span>
    <!-- ... icons ... -->
    <svg
        class="sun-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
    <svg
        class="moon-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
</button>

<style>
    /* ... styles remain mostly same ... */
    .theme-toggle {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border-color, rgba(255, 255, 255, 0.1));
        border-radius: 12px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: var(--accent-color);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        padding: 0;
        position: relative;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .theme-toggle:hover {
        background: rgba(56, 189, 248, 0.1); /* Subtle blue tint */
        border-color: var(--accent-color);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(56, 189, 248, 0.2);
        color: var(--accent-color);
    }

    .sun-icon,
    .moon-icon {
        position: absolute;
        transition:
            transform 0.5s cubic-bezier(0.23, 1, 0.32, 1),
            opacity 0.5s ease;
    }

    /* When Dark Mode is Active */
    :global([data-theme="dark"]) .sun-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }

    :global([data-theme="dark"]) .moon-icon {
        opacity: 0;
        transform: rotate(90deg) scale(0);
    }

    /* When Light Mode is Active */
    :global([data-theme="light"]) .sun-icon {
        opacity: 0;
        transform: rotate(-90deg) scale(0);
    }

    :global([data-theme="light"]) .moon-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }
</style>

<script>
    const handleToggleClick = () => {
        const element = document.documentElement;
        const currentTheme = element.getAttribute("data-theme");
        const isDark = currentTheme === "dark";
        const theme = isDark ? "light" : "dark";

        element.setAttribute("data-theme", theme);
        localStorage.setItem("theme", theme);
    };

    const toggles = document.querySelectorAll(".theme-toggle");
    toggles.forEach((toggle) => {
        toggle.addEventListener("click", handleToggleClick);
    });
</script>
